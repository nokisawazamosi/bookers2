
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user, book_new: @book_new %>
    </div>


    <div class="col-md-8 offser-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <tbody>
            <tr><% @books.each do |book| %></tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
            <tr><% end %></tr>
          </tbody>
        </thead>
    </table>
    </div>
  </div>
</div>




