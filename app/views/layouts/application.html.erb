<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/dd0fbec5b8.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header>
    <% if user_signed_in? %>
      <li>
        <i class="fa-solid fa-house-chimney" style="color: #ffffff;"></i>
        <%= link_to 'Home', user_path(current_user.id) %>
      </li>
      <li>
        <i class="fa-solid fa-users" style="color: #ffffff;"></i>
        <%= link_to 'Users' users_path %>
      </li>
      <li>
        <i class="fa-solid fa-book-open" style="color: #ffffff;"></i>
        <%= link_to 'Books', books_path %>
      </li>
      <li>
        <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
      
      

    <% else %>
      <li>
        <i class="fa-solid fa-house-chimney" style="color: #ffffff;"></i>
        <%= link_to 'Home', root_path %>
      </li>
      <li>
        <i class="fa-solid fa-link" style="color: #ffffff;"></i>
        <%= link_to 'About', about_path %>
      </li>
      <li>
        <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>
        <%= link_to "Sign_up", new_user_registration_path %>
      </li>
      <li>
        <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>
        <%= link_to "Log in", new_user_session_path %>
      </li>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
