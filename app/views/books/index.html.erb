
<h2>Books</h2>
<table class="book-wrap">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr><% @books.each do |book| %></tr>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>

    <% end %>
    </tr>
  </tbody>
</table>
