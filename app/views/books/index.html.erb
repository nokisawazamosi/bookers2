
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book, user: @user, book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr><% @books.each do |book| %></tr>
            <td><%= image_tag book.user.get_profile_image(80,80) %></td>
            <td><%= link_to book.title,book_path(book.id) %></td>
            <td><%= book.body %></td>
          <tr><% end %></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


