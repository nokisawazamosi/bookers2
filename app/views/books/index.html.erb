
<%= render 'list', book: @book, user: @user %>


<h2>Books</h2>
<table class="book-wrap">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr><% @books.each do |book| %></tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
    <tr><% end %></tr>
  </tbody>
</table>
