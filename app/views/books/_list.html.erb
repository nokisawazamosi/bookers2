<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>



<div>
  <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block edit_user_120089" do %>
    <i class="fas fa-user-cog" style="color: #5f6267;"></i>
  <% end %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: book_new do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</labell>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>