
<%= render 'list', book: @book, user: @user %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(80,80) %></td>
      <td><%= link_to @book.user.name,user_path(@user.id) %></td>
      <td><%= link_to @book.title,book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book) %>
        <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>